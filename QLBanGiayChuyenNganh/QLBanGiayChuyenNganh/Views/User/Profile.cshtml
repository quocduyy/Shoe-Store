@using QLBanGiayChuyenNganh.Models

@{
    ViewBag.Title = "Trang cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table>
        <div style="align-items:center;" class="wrapper">
            <div class="main">
                <main class="content">

                    <div class="container-fluid p-0">

                        <div class="mb-3">


                        </div>
                        <div class="row">
                            <div class="col-md-4 col-xl-3">
                                <div style="transform: translateX(165%)" class="card mb-3">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Profile Details</h5>
                                    </div>
                                    <div class="card-body text-center">
                                       
                                        <img src="~/Content/images/anh/giay/1.png" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                                        <h5 class="card-title mb-0">@kh.TenKhachHang</h5>
                                        <div class="text-muted mb-2">Member</div>

                                        <div>
                                            @Html.ActionLink("Edit", "SuaProfile", new { id = kh.MaKhachHang }, new { @class = "btn btn-primary btn-sm" })


                                        </div>
                                    </div>
                                    <hr class="my-0" />
                                    <div class="card-body">
                                        <h5 class="h6 card-title">Biệt Hiệu</h5>
                                        <a href="#" class="badge bg-primary me-1 my-1">Ông hoàng săn sale</a>
                                        <a href="#" class="badge bg-primary me-1 my-1">Tay nhanh hơn não</a>
                                        <a href="#" class="badge bg-primary me-1 my-1">Chúa tể 10k</a>
                                        <a href="#" class="badge bg-primary me-1 my-1">Khách hàng kim cương</a>

                                    </div>
                                    <hr class="my-0" />
                                    <div class="card-body">
                                        <h5 class="h6 card-title">About</h5>
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Address <a href="#">@kh.DiachiKH</a></li>

                                            <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Phone <a href="#">@kh.SDTKH</a></li>
                                            <li class="mb-1"><span data-feather="map-pin" class="feather-sm me-1"></span> Email <a href="#">@kh.TAIKHOANKH.Email</a></li>
                                        </ul>
                                    </div>
                                    <hr class="my-0" />
                                    <div class="card-body">
                                        <h5 class="h6 card-title">Elsewhere</h5>
                                        <ul class="list-unstyled mb-0">

                                            <li class="mb-1"><a href="#">Twitter</a></li>
                                            <li class="mb-1"><a href="#">Facebook</a></li>
                                            <li class="mb-1"><a href="#">Instagram</a></li>

                                            <a class="btn btn-primary btn-sm" href="/Shoes/Index">Back to Home </a>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </table>
}