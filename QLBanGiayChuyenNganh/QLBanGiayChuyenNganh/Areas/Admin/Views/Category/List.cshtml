@model IEnumerable<QLBanGiayChuyenNganh.Models.LOAIGIAY>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <a type="submit" class="btn btn-primary" href="@Url.Action("Add", "Category")" style="width: 200px; margin: 20px;">Thêm loại giày</a>
            <h5 class="card-header">DANH SÁCH LOẠI GIÀY</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <td></td>
                            <th style="text-align:center"><strong>Tên loại giày</strong></th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody class="table-border-bottom-0">
                            <tr>
                                <td></td>
                                <td style="text-align:center"><i class="fab fa-angular fa-lg text-danger"></i> @Html.DisplayFor(model => item.TenLoaiGiay)</td>
                                <td style="text-align:center">
                                    <a class="btn btn-info" href="@Url.Action("Update", "Category", new { id = item.MaLoaiGiay })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Category", new { id = item.MaLoaiGiay })"><i class="bx bx-trash me-1"></i> Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-size: 12px;
    }
</style>

